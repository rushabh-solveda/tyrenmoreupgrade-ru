<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:CascadeSearch:Magento_Widget:etc/widget.xsd">
	<widget class="Navyuginfo\CascadeSearch\Block\Widget\Search" id="navyuginfo_cascadesearch_search">
	<label>Cascade Search</label>
	<description>Search Tyres by brand name and size</description>
		<parameters>

			<parameter name="category_id_1" xsi:type="block" visible="true" required="true" sort_order="0">
				<label translate="true">Car Category</label>
				<block class="Magento\Catalog\Block\Adminhtml\Category\Widget\Chooser">
					<data>
						<item name="button" xsi:type="array">
							<item name="open" xsi:type="string" translate="true">Select Category...</item>
						</item>
					</data>
				</block>
			</parameter>

			<parameter name="category_id_2" xsi:type="block" visible="true" required="true" sort_order="1">
				<label translate="true">Bike Category</label>
				<block class="Magento\Catalog\Block\Adminhtml\Category\Widget\Chooser">
					<data>
						<item name="button" xsi:type="array">
							<item name="open" xsi:type="string" translate="true">Select Category...</item>
						</item>
					</data>
				</block>
			</parameter>			

			<parameter name="car_attribute_1" sort_order="2" visible="true" xsi:type="text">
				<label>Car Tyre Width Attribute Code</label>
			</parameter>
			<parameter name="car_attribute_2" sort_order="3" visible="true" xsi:type="text">
				<label>Car Tyre Profile Attribute Code</label>
			</parameter>
			<parameter name="car_attribute_3" sort_order="4" visible="true" xsi:type="text">
				<label>Car Tyre Rim Attribute Code</label>
			</parameter>			

			<parameter name="bike_attribute_1" sort_order="5" visible="true" xsi:type="text">
				<label>Bike Tyre Width Attribute Code</label>
			</parameter>
			<parameter name="bike_attribute_2" sort_order="6" visible="true" xsi:type="text">
				<label>Bike Tyre Profile Attribute Code</label>
			</parameter>
			<parameter name="bike_attribute_3" sort_order="7" visible="true" xsi:type="text">
				<label>Bike Tyre Rim Attribute Code</label>
			</parameter>			


		</parameters>
	</widget>
</widgets>
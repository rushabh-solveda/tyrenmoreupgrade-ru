<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <pumcp>
                <model>PayUMCitrus\Pumcp\Model\PaymentMethod</model>
                <title>PayUMoney Citrus ICP Combined</title>
				<pumkey backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
				<pumsalt backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
				<apikey backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
				<accesskey backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
				<vanityurl backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <payment_action>Sale</payment_action>
                <visible_on_cart>1</visible_on_cart>
                <order_status>pending_payment</order_status>
            </pumcp>
        </payment>
    </default>
</config>

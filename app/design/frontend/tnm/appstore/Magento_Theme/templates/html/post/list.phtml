/** @var \Mageplaza\Blog\Block\Frontend $block */
?>
<div class="post-list-content" id="mpblog-list-container">
    <?php $postCollection = $block->getPostCollection(); ?>
    <?php if ($postCollection && $postCollection->getSize()) : ?>
        <div class="post-list-body">
            <?php $i = 0; ?>
            <?php /** @var \Mageplaza\Blog\Model\Post $post */

            /*echo "<pre>@@@";
            print_r($postCollection->getData()); */
            //rsort($postCollection);
            foreach ($postCollection as $key=>$post):
                if($i<=5){
                ?>
                <div class="tyre_blog">
                     <div class="col-md-3">
                        <?php if ($post->getImage()) : ?>
                        <img src="<?= $block->resizeImage($post->getImage()); ?>">
                        <?php endif; ?>
                     </div>
                     <div class="col-md-9">
                        <p class="h4 blog-title"><?= $post->getName(); ?></p>
                        <p><?= $block->maxShortDescription($post->getShortDescription()); ?></p>
                        <p><span class="when">
                       <?= $block->getDateFormat($post->getPublishDate()); ?>
                       </span><span class="read"><a class="mp-read-more" href="<?= $post['blog_url']; ?>"
                                       title="<?= __('Read More...'); ?>">
                                        <?= __('Read More'); ?>
                                    </a></span></p>
                     </div>
                  </div>
                <?php if ($i++ % 5 == 0) : ?>
                    <div class="mp-clear"></div>
                <?php endif; ?>
            <?php } endforeach; ?>
            <div class="mp-clear"></div>
        </div>
    <?php else : ?>
        <?= __('There are no posts at this moment'); ?>
    <?php endif; ?>
</div>
<script>
    require(['jquery'], function ($) {
        $('.limiter').css('float', 'right');
    });
</script>

